{
  "name": "ai-music-player-tests",
  "version": "1.0.0",
  "description": "Unit and integration tests for Radio Calico ratings system",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:backend": "jest ratings.test.js",
    "test:frontend": "jest frontend-ratings.test.js",
    "test:integration": "jest ratings-integration.test.js",
    "test:all": "jest *.test.js",
    "test:verbose": "jest --verbose",
    "security:audit": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "security:scan": "npm audit && npm run security:deps",
    "security:deps": "npm outdated || true",
    "security:report": "npm audit --json > security-audit-tests.json"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "jsdom": "^23.0.1",
    "node-fetch": "^2.7.0",
    "@jest/globals": "^29.7.0"
  },
  "dependencies": {
    "pg": "^8.16.3",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/setup.js"],
    "collectCoverageFrom": [
      "../server.js",
      "../public/script.js",
      "!*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "testMatch": [
      "**/*.test.js"
    ],
    "verbose": true,
    "testTimeout": 10000
  }
}
